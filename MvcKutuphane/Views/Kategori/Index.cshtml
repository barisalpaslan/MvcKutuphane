@using MvcKutuphane.Models.Entity
@model List<TBL_KATEGORI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>

<br>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Silme</th>
        <th>Güncelleme</th>
    </tr>

    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.ID</td>
            <td>@ktg.AD</td>
            <td><a href="/Kategori/KategoriSil/@ktg.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@ktg.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Kategori/KategoriEkle/" class="btn btn-primary"> Yeni Kategori Ekle </a>
