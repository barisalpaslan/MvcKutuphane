@using MvcKutuphane.Models.Entity
@model List<TBL_MESAJLAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

<br>

<h2>Gelen Mesajlar</h2>

<table class="table table-hover">
    <tr>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>İşlem Tarihi</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.GONDEREN</td>
            <td>@x.KONU</td>
            <td>@x.ICERIK</td>
            <td>@Convert.ToDateTime(x.TARIH).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>
