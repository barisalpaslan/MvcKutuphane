@using MvcKutuphane.Models.Entity
@model List<TBL_HAREKET>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

<br>

<h2>Kitaplarım</h2>

<br>

<p>Bu sayfada geçmişte aldığınız kitaplar görüntülenmektedir.</p>

<br>

<table class="table table-bordered">
    <tr>
        <th>Kitap Adı</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
    </tr>

    @foreach (var x in Model)
        {
            <tr>
                <td>@x.TBL_KITAP.AD</td>
                <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(x.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>           
            </tr>
        }
</table>