@model MvcKutuphane.Models.Entity.TBL_UYELER

@{
    ViewBag.Title = "UyeEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üye Ekleme Sayfası</h2>

<br>

<form class="form-group" method="post">
    <div>
        <label>Üye Adı : </label>
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control", @style = "width:500px" })
        @Html.ValidationMessageFor(x => x.AD, "", new { @style = "color:red" })
    </div>
    <br>

    <div>
        <label>Üye Soyadı : </label>
        @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control", @style = "width:500px" })
    </div>
    <br>

    <div>
        <label>Mail : </label>
        @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control", @style = "width:500px" })
    </div>
    <br>

    <div>
        <label>Kullanıcı Adı : </label>
        @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control", @style = "width:500px" })
    </div>
    <br>

    <div>
        <label>Şifre : </label>
        @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control", @style = "width:500px" })
        @Html.ValidationMessageFor(x => x.SIFRE, "", new { @style = "color:red" })
    </div>
    <br>

    <div>
        <label>Fotoğraf : </label>
        @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control", @style = "width:500px" })
    </div>
    <br>

    <div>
        <label>Telefon : </label>
        @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control", @style = "width:500px" })
    </div>
    <br>

    <div>
        <label>Okul : </label>
        @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control", @style = "width:500px" })
    </div>
    <br>
    <div>
        <button class="btn btn-info" id="Btn1">Ekle</button>
    </div>
</form>