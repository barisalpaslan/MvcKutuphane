@using MvcKutuphane.Models.Entity
@model List<TBL_HAREKET>

@{
    ViewBag.Title = "UyeKitapGecmis";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üye : @ViewBag.dgr</h2>

<br>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>Üyenin Getirdiği Tarih</th>
    </tr>

    @foreach (var uye in Model)
    {
        <tr>
            <td>@uye.ID</td>
            <td>@uye.TBL_KITAP.AD</td>
            <td>@uye.TBL_PERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(uye.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(uye.IADETARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(uye.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>

