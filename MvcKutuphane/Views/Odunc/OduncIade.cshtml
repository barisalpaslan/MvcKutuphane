@model MvcKutuphane.Models.Entity.TBL_HAREKET

@{
    ViewBag.Title = "OduncIade";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap İade Alma Sayfası</h2>

@using (Html.BeginForm("OduncGuncelle", "Odunc", FormMethod.Post))
{
    <br>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @style = "width: 500px" })
    </div>

    <div class="form-group">
        @Html.LabelFor(k => k.KITAP, "Kitap Adı : ")
        @Html.TextBoxFor(k => k.TBL_KITAP.AD, new { @class = "form-control", @style = "width: 500px" })
    </div>

    <div class="form-group">
        @Html.LabelFor(k => k.UYE, "Üye : ")
        @Html.TextBoxFor(k => k.TBL_UYELER.AD, new { @class = "form-control", @style = "width: 500px" })
    </div>

    <div class="form-group">
        @Html.LabelFor(k => k.PERSONEL, "Personel : ")
        @Html.TextBoxFor(k => k.TBL_PERSONEL.PERSONEL, new { @class = "form-control", @style = "width: 500px" })
    </div>

    <div class="form-group">
        @Html.LabelFor(k => k.ALISTARIH, "Alış Tarihi : ")
        @Html.TextBoxFor(k => k.ALISTARIH, "{0:dd.MM.yyyy}", new { @class = "form-control", @style = "width: 500px" })
    </div>

    <div class="form-group">
        @Html.LabelFor(k => k.IADETARIH, "İade Tarihi : ")
        @Html.TextBoxFor(k => k.IADETARIH, "{0:dd.MM.yyyy}", new { @class = "form-control", @style = "width: 500px" })
    </div>

    <div class="form-group">
        <label>Üyenin Getirdiği Tarih</label>
        <input type="text" class="form-control" name="UYEGETIRTARIH"
               value="@DateTime.Now.ToShortDateString()" />
    </div>

    <div>
        <button class="btn btn-warning">Ödünç Kitabı Geri Al</button>
    </div>
}