@model MvcKutuphane.Models.Entity.TBL_PERSONEL

@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personel Güncelleme Sayfası</h2>

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <br>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @style = "width: 500px" })
    </div>

    <div class="form-group">
        @Html.LabelFor(k => k.PERSONEL, "Personel Adı : ")
        @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control", @style = "width: 500px" })
    </div>

    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}