@using MvcKutuphane.Models.Entity
@model List<TBL_PERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link href="~/Css/TabloRenk.css" rel="stylesheet" />

<h2>Personeller</h2>

<br>

<table class="table table-bordered">
    <tr class="tablorenk">
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Silme</th>
        <th>Güncelleme</th>
    </tr>

    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.ID</td>
            <td>@prs.PERSONEL</td>
            <td><a href="/Personel/PersonelSil/@prs.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@prs.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Personel/PersonelEkle/" class="btn btn-primary"> Yeni Personel Ekle </a>